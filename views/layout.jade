//- layout.jade
doctype html
html(lang='en')
  head
    block title
      title Personality Insights
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', href='/css/watson-bootstrap-dark.css')
    link(rel='stylesheet', href='/css/style.css')

  body
    div.container
      div.row
        div.col-lg-12
          div.row.top-nav
            div.col-lg-12
              a.right.fork(href='http://www.smarterworksolutions.com/') Homepage
              a.right(href='mailto:mark@smarterworksolutions.com') Contact Us
          div.row.header(style='padding-bottom:0px;')
            div.avatar.img-container.col-lg-1.col-xs-1
              img(src='/images/app.png')
            div.col-lg-6.col-xs-6
              h2 SmarterWorkSolutions Personality Insights
              p The Personality Insights service uses linguistic analytics to
                | extract a spectrum of cognitive and social characteristics from
                | the text data that a person generates through text messages,
                | tweets, posts, and more.
            div.col-lg-4.col-xs-4
              h3 Keep Exploring:
              a.left(href='http://www.google.com') Link 1
              a.right(href='http://www.google.com') Link 2
      block row-content

    script(type='text/javascript', src='/js/jquery-1.11.1.min.js')
    script(type='text/javascript', src='/js/d3.v2.min.js')
    script(type='text/javascript', src='/js/demo.js')
    script(type='text/javascript', src='/js/personality.js')
    script(type='text/javascript', src='/js/textsummary.js')
